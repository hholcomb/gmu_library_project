<h1>Listing Books</h1>


<%= form_tag books_path, :method => 'get'  do %>
   <%= text_field_tag :search, params[:search]%>
   <%= submit_tag "Search", :name => nil  %>
 <% end %>
 

<table>
  <thead>
    <tr>
      <th>Isbn</th>
      <th>Title</th>
      <th>Author</th>
      <th>Genre</th>
      <th>Abstract</th>
      <th>Pages</th>
      <th>Image cover url</th>
      <th>Published on</th>
      <th>Total in library</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.isbn %></td>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.genre %></td>
        <td><%= book.abstract %></td>
        <td><%= book.pages %></td>
        <td><%= book.image_cover_url %></td>
        <td><%= book.published_on %></td>
        <td><%= book.total_in_library %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
       <td><%= button_to 'Reserve', reservations_path(book_id: book, user_index: session[:user_index] ) %>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path %>
